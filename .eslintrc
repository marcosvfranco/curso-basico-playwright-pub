{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2021
    },
    "plugins": ["@typescript-eslint"],
    "env": {
        "es6": true
    },
    "extends": [
        "plugin:playwright/playwright-test",
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
        "indent": ["error", 4],
        "no-multi-spaces": ["error"],
        "no-multiple-empty-lines": ["error", { "max": 1}]
    }
